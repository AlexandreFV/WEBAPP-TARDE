@model List<WEBAPP_TARDE.Models.ClientesViewModel>

<div class="card">

<div class="card-header">
    <h2 style="color:black">Lista de cliente</h2>
</div>
    
    <div class="card-body">
        <div class="row">
        <div class="col-2">
        <a href="/Clientes/Cadastro" class="btn btn-success"> Novo Cliente </a>
        </div>

        <div class="col-3">
            <select name="Filtro" class="form-control">
            <option value="0">Todos os campos</option>
            <option value="Id">Por id</option>
            <option value="Nome">Por nome</option>
            <option value="Telefone">Por telefone</option>

            </select>
        </div>

        <div class="col-5">
            <input type="text" name="busca" class="form-control"/>
        </div>


        <div class="col-2">
            <button class="btn btn-primary" type="submit">Pesquisar</button>
        </div>
        </div>

        <table class="table" style="color:black">


            <thead>
                <tr>
                    <td>Codigo</td>
                    <td>Nome</td>
                    <td>Telefone</td>
                    <td>
                    </td>
                </tr>


            </thead>


            <tbody>

                @foreach(var cliente in Model)
                {
                    <tr>
                    <td>
                    @cliente.Id </td>
                    <td> @cliente.Nome </td>
                    <td> @cliente.Telefone </td>


                            <td>
                            <a href="/Clientes/Editar/@cliente.Id" class="btn btn-warning"> Editar</a>
                            <a href="/Clientes/Excluir/@cliente.Id" class="btn btn-danger"> Excluir</a>
                            <a href="/Clientes/Compras/@cliente.Id" class="btn btn-info"> Lista de compras</a>
                              </td>                   
                              </tr>

                }

                

            </tbody>






        </table>

    </div>
</div>



